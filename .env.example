# 示例配置文件
# 复制此文件为 .env 并填入你的配置

# ==================== API Keys ====================
OPENAI_API_KEY=your-openai-api-key-here

# ==================== LLM Configuration ====================
# LLM模型名称
LLM_NAME=gpt-4o-mini

# 自定义API Base URL（可选）
# 例如：Azure OpenAI, 本地vLLM等
# LLM_BASE_URL=https://your-api.com/v1

# LLM温度参数
LLM_TEMPERATURE=0.0

# LLM最大生成token数
LLM_MAX_NEW_TOKENS=2048

# ==================== Embedding Configuration ====================
# Embedding模型名称
EMBEDDING_MODEL_NAME=text-embedding-3-small

# 自定义Embedding API Base URL（可选）
# EMBEDDING_BASE_URL=https://your-embedding-api.com/v1

# Embedding批处理大小
EMBEDDING_BATCH_SIZE=32

# ==================== Retrieval Parameters ====================
# 初始锚点数量
TOP_K_ANCHORS=5

# 最终返回结果数量
TOP_N_RETRIEVAL=3

# 最大扩散跳数
MAX_HOPS=2

# 能量衰减率
ENERGY_DECAY_RATE=0.5

# 初始能量分配方式: softmax, normalized, uniform
ANCHOR_ENERGY_DISTRIBUTION=softmax

# 合并策略: weighted_average, replace, accumulate, max
MERGE_STRATEGY=weighted_average

# 加权平均中旧能量的权重
MERGE_OLD_WEIGHT=0.7

# ==================== Graph Construction ====================
# 文档内最大相似边数量
MAX_SIM_NEIGHBORS_INTRA_DOC=3

# 跨文档最大相似边数量
MAX_SIM_NEIGHBORS_INTER_DOC=2

# 因果检测滑动窗口大小
CAUSE_WINDOW_SIZE=5

# 因果检测图邻居跳数
CAUSE_NEIGHBOR_HOPS=1

# ==================== Plasticity Parameters ====================
# Hebbian学习率（LTP）
HEBBIAN_LEARNING_RATE=0.1

# 时间衰减系数（LTD）
TIME_DECAY_FACTOR=0.99

# 最小边权重阈值
MIN_EDGE_WEIGHT=0.1

# LTP激活阈值
LTP_ACTIVATION_THRESHOLD=0.05

# ==================== Node Configuration ====================
# 是否使用Entity节点
USE_ENTITY_NODES=true

# 是否使用Chunk节点
USE_CHUNK_NODES=true

# ==================== Text Processing ====================
# 文档切片大小（token数）
CHUNK_SIZE=512

# 切片重叠大小（token数）
CHUNK_OVERLAP=128

# ==================== Storage Configuration ====================
# 输出目录
SAVE_DIR=outputs

# 是否强制从头重建索引
FORCE_INDEX_FROM_SCRATCH=false

# 是否缓存LLM响应
CACHE_LLM_RESPONSES=true

# ==================== Other Configuration ====================
# Hugging Face缓存目录（可选）
# HF_HOME=/path/to/huggingface/cache

# CUDA设备（如果有GPU）
# CUDA_VISIBLE_DEVICES=0,1,2,3

# 日志级别: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO
